(* CMB Functions *)
CMBStandard[l_] := If[l > 0, 1/(l*(l + 1)), 0];
CMBHexCorrelation[l_, phi_] := CMBStandard[l]*(1 + Ahex*Cos[6*phi]);

(* Observable angle *)
observableAngleArcmin[lmax_] := If[lmax > 0, N[Pi/Sqrt[lmax]*180*60/Pi], 0];

(* Dark Energy *)
