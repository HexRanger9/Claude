\section{Scaling Architecture}

\subsection{Modular Tile System}
\textbf{Design Philosophy}: Each tile identical hardware with software-defined roles

\textbf{Single Tile}: Proof of concept validation (current build target)
\textbf{6-Tile Cube}: Hollow structure configuration
\begin{itemize}[noitemsep]
    \item 1× Bottom tile (foundation)
    \item 4× Side tiles (field walls)
    \item 1× Top tile (field cap)
    \item Hollow interior for concentrated field effects
\end{itemize}

\textbf{Multi-Cube Networks}: Master/slave coordination via WiFi mesh
\begin{itemize}[noitemsep]
    \item Master tile: Timing coordination, command reception
    \item Slave tiles: Synchronized field generation following master
    \item Network scaling: Multiple 6-tile cubes in coordinated arrays
\end{itemize}

\subsection{Control System Architecture}

\textbf{Power Flow}:
\begin{align}
\text{MEAN WELL PSU} &\rightarrow \text{BCAP3000} \rightarrow \text{Coil} \rightarrow \text{Field Generation}\\
&\downarrow \text{RPi Pico W} \leftarrow \text{WiFi Commands}\\
&\downarrow \text{PWM Control (1kHz, 60\% duty)}\\
&\downarrow \text{Safety Monitoring \& Emergency Stop}
\end{align}

\textbf{Communication Protocol}:
\begin{itemize}[noitemsep]
    \item WiFi mesh networking between tiles
    \item Master broadcasts timing synchronization
    \item Slaves acknowledge and execute coordinated activation
    \item Real-time status monitoring and emergency coordination
\end{itemize}

\section{Measurement Protocol}

\subsection{Primary Detection Method}
\textbf{Target Phenomenon}: 5-6\% electromagnetic current boost during lattice coupling

\textbf{Measurement Chain}:
\begin{enumerate}[noitemsep]
    \item \textbf{Current Probe}: Tektronix TCP0030 (±75A, 120MHz bandwidth)
    \item \textbf{Data Capture}: Rigol DS1054Z oscilloscope (4-channel, 50MHz, 1GSa/s)
    \item \textbf{Baseline}: Establish 16A reference current through test circuit
    \item \textbf{Activation}: Engage lattice coupling via PWM control
    \item \textbf{Detection}: Monitor for 1A current increase (17A total)
\end{enumerate}

\textbf{Expected Signal Characteristics}:
\begin{itemize}[noitemsep]
    \item Amplitude: 1A increase over 16A baseline (6.25\% boost)
    \item Duration: Sustained during lattice field activation
    \item Reproducibility: <5\% variance across multiple trials
    \item Signal-to-noise: Clear differentiation from measurement noise
\end{itemize}

\subsection{Secondary Measurements}
\textbf{Spatial Effects}: Bosch GLM400CL laser distance meter
\begin{itemize}[noitemsep]
    \item Target: 0.1-0.5 m spacetime fold detection
    \item Method: Precision distance measurement during field activation
    \item Resolution: ±1mm accuracy over 10m range
\end{itemize}

\textbf{Timing Effects}: Oscilloscope nanosecond-level analysis
\begin{itemize}[noitemsep]
    \item Target: 4.6 ns timing difference over 10m
    \item Method: Signal propagation timing comparison
    \item Resolution: 1 ns minimum detection capability
\end{itemize}

\section{Safety Systems}

\subsection{Power Safety Protocols}
\textbf{Emergency Systems}:
\begin{itemize}[noitemsep]
    \item Emergency stop switch (240V rated, big red mushroom button)
    \item Current limiting fuses (150A fast-blow, multiple spares)
    \item Voltage regulation (8V maximum safe operation level)
    \item Automatic shutoff on parameter deviation
\end{itemize}

\textbf{Electrical Protection}:
\begin{itemize}[noitemsep]
    \item Proper grounding for all equipment and operator
    \item GFCI protection on all AC power circuits
    \item Isolated power supplies for measurement equipment
    \item Current path analysis and hot conductor identification
\end{itemize}

\subsection{Personnel Safety Protocols}
\textbf{Operator Protection}:
\begin{itemize}[noitemsep]
    \item 25kV rated rubber insulation mats for standing surface
    \item Grounding straps for operator and all equipment
    \item Safety glasses and non-conductive clothing
    \item Two-person safety protocol (observer + operator)
\end{itemize}

\textbf{Environmental Containment}:
\begin{itemize}[noitemsep]
    \item Basic Faraday cage (copper mesh around test area)
    \item EMI monitoring to ensure regulatory compliance
    \item Fire suppression (CO2 extinguisher for electrical fires)
    \item Clear evacuation procedures and emergency contacts
\end{itemize}

\section{Build Timeline}

\subsection{Phase 1: Component Arrival \& Preparation (July 7-13)}
\textbf{Day 1 (July 7)}: H2D printer arrival, final component delivery
\textbf{Days 2-3}: Printer setup, calibration, initial test prints
\textbf{Days 4-5}: Hull printing (40×40×5 cm tile)
\textbf{Days 6-7}: Coil winding (120 turns, 26 AWG), component preparation

\subsection{Phase 2: Assembly \& Integration (July 14-20)}
\textbf{Days 8-9}: Hull post-processing, 838AR coating application
\textbf{Days 10-11}: Component mounting, electronic integration
\textbf{Days 12-13}: Power system connection, safety system installation
\textbf{Day 14}: Complete assembly, initial power-on testing

\subsection{Phase 3: Testing \& Calibration (July 21-27)}
\textbf{Days 15-16}: Measurement equipment setup and calibration
\textbf{Days 17-18}: Baseline measurements, system characterization
\textbf{Days 19-20}: Initial lattice coupling tests, parameter optimization
\textbf{Day 21}: Complete system validation, safety protocol verification

\subsection{Phase 4: Validation Experiment (July 28-31)}
\textbf{Days 22-23}: Formal validation protocol execution
\textbf{Days 24-25}: Multiple trial runs, statistical analysis
\textbf{Days 26-27}: Data compilation, documentation preparation
\textbf{Day 28}: Final validation, presentation package completion

\section{Success Criteria}

\subsection{Technical Validation}
\textbf{Primary Success}: Reproducible 5-6\% current boost detection
\begin{itemize}[noitemsep]
    \item Clear oscilloscope evidence of 1A current increase
    \item Sustained effect during lattice field activation
    \item Statistical significance across minimum 10 trials
    \item Signal variance <5\% between measurements
\end{itemize}

\textbf{Documentation Standards}:
\begin{itemize}[noitemsep]
    \item Professional-quality oscilloscope traces
    \item Video documentation of complete experimental procedure
    \item Statistical analysis of measurement variance
    \item Comprehensive data package for technical review
\end{itemize}

\subsection{Safety Compliance}
\textbf{Zero Safety Incidents}: Complete adherence to all safety protocols
\textbf{Equipment Protection}: No damage to measurement or build equipment
\textbf{Environmental Compliance}: EMI within acceptable limits
\textbf{Procedure Documentation}: Complete safety procedure validation

