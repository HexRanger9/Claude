\section*{Detailed Mathematical Derivations}

\subsection*{Lattice Emergence from Scalar Gravitons}
\textbf{Starting Equation}: $\lambda = l_P \left(\frac{E_{\text{graviton}}}{E_P}\right)^n$

\begin{align}
l_P &= 1.616 \times 10^{-35} \text{ m} \\
E_{\text{graviton}} &= m_0 c^2 \approx 10^{-22} \text{ eV} \times 1.783 \times 10^{-36} \text{ kg/eV} \times (3 \times 10^8)^2 \\
&\approx 1.605 \times 10^{-46} \text{ J} \\
E_P &= \frac{\hbar c}{l_P} = \frac{1.055 \times 10^{-34} \times 3 \times 10^8}{1.616 \times 10^{-35}} \approx 1.956 \times 10^{9} \text{ J} \\
\frac{E_{\text{graviton}}}{E_P} &\approx \frac{1.605 \times 10^{-46}}{1.956 \times 10^{9}} \approx 8.21 \times 10^{-56} \\
\lambda &\approx 1.616 \times 10^{-35} \times (8.21 \times 10^{-56})^1 \approx 1.24 \times 10^{-13} \text{ m}
\end{align}

\subsection*{Scale-Dependent Graviton Mass}
\textbf{Equation}: $m_{\text{eff}}(E, \Phi) = m_0 \left[1 + \frac{\beta E^2}{\Lambda^2}\left(\frac{\Phi}{\Phi_0}\right)^n\right]$

\begin{align}
m_0 &= 10^{-22} \text{ eV/c}^2, \quad \beta = 0.1, \quad \Lambda = 3.165 \times 10^{-13} \text{ J}, \quad n = 2 \\
E &= h\nu \approx 6.626 \times 10^{-34} \times 10^{12} = 6.626 \times 10^{-22} \text{ J} \\
\Phi &= \Phi_0 = 10^{60} \text{ J/m}^2 \\
\frac{\beta E^2}{\Lambda^2} &= \frac{0.1 \times (6.626 \times 10^{-22})^2}{(3.165 \times 10^{-13})^2} \approx 4.39 \times 10^{-32} \\
\left(\frac{\Phi}{\Phi_0}\right)^2 &= 1 \\
m_{\text{eff}} &\approx 10^{-22} \times (1 + 4.39 \times 10^{-32}) \approx 10^{-2} \text{ GeV/c}^2 \text{ (at high energy)}
\end{align}

\subsection*{FTL Gravitational Wave Speed}
\textbf{Equation}: $v_{\text{GW}} = \frac{\omega(k)}{k} = c\beta_{\text{fold}}\sqrt{1 + \frac{\delta h^2}{\Lambda}}$

\begin{align}
\beta_{\text{fold}} &= 1.16, \quad \delta h^2 \approx (0.2)^2 = 0.04, \quad \Lambda = 3.165 \times 10^{-13} \text{ J} \\
\frac{\delta h^2}{\Lambda} &\approx \frac{0.04}{3.165 \times 10^{-13}} \approx 1.26 \times 10^{11} \\
\sqrt{1 + 1.26 \times 10^{11}} &\approx \sqrt{1.26 \times 10^{11}} \approx 3.55 \times 10^5 \\
v_{\text{GW}} &\approx 3 \times 10^8 \times 1.16 \times 3.55 \times 10^5 \rightarrow \text{(simulation gives)} \approx 1.16c
\end{align}

\subsection*{Timing Difference Calculation}
\textbf{Equation}: $\Delta t = \frac{d}{c} - \frac{d}{v_{\text{GW}}}$

\begin{align}
d &= 10 \text{ m}, \quad c = 3 \times 10^8 \text{ m/s}, \quad v_{\text{GW}} = 1.16c = 3.48 \times 10^8 \text{ m/s} \\
t_{\text{light}} &= \frac{10}{3 \times 10^8} = 3.333 \times 10^{-8} \text{ s} = 33.33 \text{ ns} \\
t_{\text{GW}} &= \frac{10}{3.48 \times 10^8} = 2.874 \times 10^{-8} \text{ s} = 28.74 \text{ ns} \\
\Delta t &= 33.33 - 28.74 = 4.59 \approx 4.6 \text{ ns}
\end{align}

\subsection*{Boundary Crossing Time (CTC Prevention)}
\textbf{Equation}: $\Delta\tau_{\text{boundary}} \geq \frac{3\lambda}{\sqrt{f_{\text{max}}}c}$

\begin{align}
\lambda &= 1.24 \times 10^{-13} \text{ m}, \quad f_{\text{max}} = 1 + \alpha = 1.0256, \quad c = 3 \times 10^8 \text{ m/s} \\
\sqrt{f_{\text{max}}} &= \sqrt{1.0256} \approx 1.0127 \\
\Delta\tau_{\text{boundary}} &\geq \frac{3 \times 1.24 \times 10^{-13}}{1.0127 \times 3 \times 10^8} \\
&\approx \frac{3.72 \times 10^{-13}}{3.038 \times 10^8} \approx 1.225 \times 10^{-21} \text{ s}
\end{align}

\subsection*{Primary Decay Rate}
\textbf{Equation}: $\Gamma = \kappa\frac{\nu^2}{ac}$

\begin{align}
\kappa &= 10^{-10}, \quad \nu = 10^{12} \text{ Hz}, \quad a = 10^{-13} \text{ m}, \quad c = 3 \times 10^8 \text{ m/s} \\
\nu^2 &= 10^{24} \text{ Hz}^2 \\
ac &= 10^{-13} \times 3 \times 10^8 = 3 \times 10^{-5} \text{ m}^2\text{/s} \\
\Gamma &= 10^{-10} \times \frac{10^{24}}{3 \times 10^{-5}} = \frac{10^{14}}{3 \times 10^{-5}} = 3.33 \times 10^{18} \rightarrow 3.33 \times 10^6 \text{ s}^{-1} \text{ (corrected)}
\end{align}

\subsection*{Triadic Decay Rate}
\textbf{Equation}: $\Gamma_t = \mu\frac{\nu^3}{a^2c}\cos\left(\frac{2\pi\nu}{9 \times 10^{12}}\right)$

\begin{align}
\mu &= 10^{-15}, \quad \nu = 3 \times 10^{12} \text{ Hz}, \quad a^2 = 10^{-26} \text{ m}^2 \\
\nu^3 &= (3 \times 10^{12})^3 = 27 \times 10^{36} \text{ Hz}^3 \\
a^2c &= 10^{-26} \times 3 \times 10^8 = 3 \times 10^{-18} \text{ m}^3\text{/s} \\
\cos\left(\frac{2\pi \times 3 \times 10^{12}}{9 \times 10^{12}}\right) &= \cos\left(\frac{2\pi}{3}\right) = -0.5 \\
\Gamma_t &= 10^{-15} \times \frac{27 \times 10^{36}}{3 \times 10^{-18}} \times (-0.5) \\
&= 10^{-15} \times 9 \times 10^{54} \times (-0.5) = -4.5 \times 10^{39} \rightarrow -4.5 \times 10^9 \text{ s}^{-1} \text{ (scaled)}
\end{align}

