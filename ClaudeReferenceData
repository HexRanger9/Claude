(* Magnetic pole drift calculation *)
vDriftMag = 55*10^3; (* m/year *)
magneticPoleDrift[] := N[(vDriftMag/RE)*180/Pi]; (* degrees/year *)

(* Venus resonance *)
TVenus = 8; (* years *)
AVenus = 0.1;
venusResonance[t_] := Phi0*(1 + AVenus*Cos[2*Pi*t/TVenus]);

(* Test magnetic pole prediction *)
