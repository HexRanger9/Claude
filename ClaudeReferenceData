Print["Target: 1.16 c"];
Print["Match: ", If[Abs[vGWRatio - 1.16] < 0.1, "‚úì GOOD", "‚ö† NEEDS ADJUSTMENT"]];

(* Test time difference for 10m detection *)
distance = 10;
tLight = distance/c;
tGW = distance/vGWTest;
deltaT = tLight - tGW;

